# ── Speculo Environment Variables ─────────────────────────────
# Copy this file to .env and fill in your values.
# Default values are provided for local development.

# ── Database ──────────────────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ── JWT (shared across all services) ─────────────────────────
JWT_SECRET=super-secret-key-for-speculo-jwt-tokens-2024-min-32-chars
JWT_ISSUER=Speculo
JWT_AUDIENCE=SpeculoUsers

# ── Frontend ──────────────────────────────────────────────────
FRONTEND_URL=http://localhost:3000
